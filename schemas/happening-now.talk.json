{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "talk-happening-now",

  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["soon", "now"]
        },
        "talk": {
          "allOf": [
            {
              "$ref": "./reused/talk.json"
            }
          ]
        }
      },
      "required": ["talk", "mode"]
    },
    {
      "type": "null"
    }
  ]
}
